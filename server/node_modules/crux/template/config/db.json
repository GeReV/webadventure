// Database config file

{
	// Database engine to use (crux only comes with mysql built-in, but the
	// database library is extensible if you want to write your own interface)
	"engine": "mysql",
	
	// The host the server is on
	"host": "localhost",
	
	// The port to access the server on
	"port": 3306,
	
	// The name of the database to use
	"db_name": "testdb",
	
	// Used as a prefix for table names when using models/db::tableName()
	"table_prefix": "tbl_",
	
	// Username for accessing the database
	"username": "devuser",
	
	// Password for accessing the database
	"password": "devpass",
	
	// Configuration for the connection pool (if you don't know, leave them alone)
	"pool": {
		"min_count": 2,
		"max_count": 10
	},
	
	// Debugging level
	//  0: no debugging
	//  1: normal debugging messages
	//  2: excessive debugging
	"debug": 1
}

// End of file db.json
// Location: ./config/db.json
