// Configuration file for the sessions library

{
	// The HMAC key used in hashing the session id
	"private_key": "this is a key for hashing",
	
	// The type of session storage to use:
	//  "mem" - Keeps all values in memory. Faster, but uses up resources
	//  "file" - Stores session data in files. Slower, but keeps memory use down
	//  "db" - Stores session data in a database table.
	"store_type": "db",
	
	// If using the database store, what table should data be stored in
	// (if your db.json config has a "table_prefix" set, this prefix WILL
	// be applied to this name).
	"db_table": "sessions",
	
	// Compare the user agent string and ip address of the client for extra
	// session integrity
	"compare_ip": false,
	"compare_useragent": true,
	
	// How long should a session last (in seconds)
	"expires": 86400,
	
	// The name of the cookie to store the session id in
	"cookie_name": "sessid",
	
	// The session cookie's path value
	"cookie_path": "/",
	
	// The session cookie's domain value (or null for none)
	"cookie_domain": null,
	
	// Should a "secure" flag be sent
	"cookie_secure": false,
	
	// Should an httpOnly flag be sent
	"cookie_http_only": false,
	
	// Number of milliseconds between cleanup calls
	"cleanup_interval": 3600000
}

// End of file sessions.json
// Location: ./config/sessions.json
