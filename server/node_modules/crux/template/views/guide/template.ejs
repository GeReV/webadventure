<!DOCTYPE html>
<html>
<head>

	<meta charset="utf-8" />
	<title>Crux | User Guide</title>
	
	<base href="<%- this.baseUrl() %>guide/" />
	
	<link rel="stylesheet" type="text/css" href="../style.css" />
	
</head>
<body>
	<div id="wrapper">
	
		<h1>Crux: User Guide</h1>
		
		<nav>
			<ul>
				<%
				var menuItems = [
					['Getting Started', 'index'],
					['MVC Structure', 'mvc'],
					['The handle Object', 'handle'],
					['Plugins', 'plugins'],
					['Database Library', 'db'],
					['Sessions Library', 'sessions'],
					['Migrations', 'migrations'],
					['CLI', 'cli']
				];
				for (var i = 0, c = menuItems.length; i < c; i++) { %>
				<li><a href="#<%- menuItems[i][1] %>"><%- menuItems[i][0] %></a></li>
				<% } %>
			</ul>
		</nav>
		
		<div id="content">
			<%
				var data = _locals._extend({
					pre: function(wrap, code) {
						if (arguments.length === 1) {
							code = wrap;
							wrap = null;
						}
						if (typeof code === 'object') {
							code = code.join('\n');
						}
						code = code.split('\t').join('    ');
						if (wrap) {
							code = '<' + wrap + '>' + code + '</' + wrap + '>';
						}
						return '<pre class="source-code">' + code + '</pre>';
					},
					cmd: function(code) {
						return '<samp>$</samp> <kbd>' + code + '</kbd>';
					}
				});
				for (var i = 0, c = menuItems.length; i < c; i++) {
			%>
			<div id="<%- menuItems[i][1] %>" class="section <%- (menuItems[i][1] === pageView) ? 'shown' : 'hidden' %>">
				<%- this.loadViewSync('guide/' + menuItems[i][1], data, true) %>
			</div>
			<% } %>
		</div>
		
	</div>
	<script type="text/javascript" src="../guide.js"></script>
</body>
</html>
